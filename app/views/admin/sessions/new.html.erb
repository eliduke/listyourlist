<div id="login">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2 class="text-center">Login</h2>

      <%= form_tag '/admin/login' do %>

        <div class="form-group">
          <%= label_tag :email, "Email", class: "sr-only" %>
          <%= text_field_tag :email, nil, class: "form-control input-lg", placeholder: "Email" %>
        </div>

        <div class="form-group">
          <%= label_tag :password, "Password", class: "sr-only" %>
          <%= password_field_tag :password, nil, class: "form-control input-lg", placeholder: "Password" %>
        </div>

        <div class="form-group">
          <%= submit_tag "LOGIN", class: "btn btn-lyl-primary btn-lg btn-block" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
