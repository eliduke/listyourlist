<div id="lists">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>All Lists</th>
        <th class="stat">User</th>
        <th class="stat">Comments</th>
        <th class="stat">Likes</th>
      </tr>
    </thead>
    <tbody>
      <% @lists.each do |list| %>
          <tr>
            <td><%= link_to list.title, list_path(list) %></td>
            <td class="stat"><%= link_to list.user.login, profile_path(list.user.login) %></td>
            <td class="stat"><%= list.comments.size %></td>
            <td class="stat"><%= list.likes.size %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>